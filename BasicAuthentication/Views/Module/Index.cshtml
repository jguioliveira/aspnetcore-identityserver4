
@{
    ViewData["Title"] = "Modules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BasicAuthentication.ViewModel.ModuleManagement.Index
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="container">
    <h1>Modules Management</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var module in Model.Modules)
            {
                <tr>
                    <th scope="row">
                        <a asp-action="Edit" asp-route-id="@module.Id">@module.Id</a>
                    </th>
                    <td>@Html.DisplayFor(modelItem => module.Name)</td>
                    <td>@Html.DisplayFor(modelItem => module.Active)</td>
                </tr>
            }
        </tbody>
    </table>
</div>