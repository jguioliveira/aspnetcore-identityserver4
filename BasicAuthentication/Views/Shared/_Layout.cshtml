@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XPTO</title>

    @await Html.PartialAsync("_HeadReferences")
</head>
<body> 
    <div class="container">
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <a class="nav-link active" asp-area="" asp-controller="Account" asp-action="Index">My Account</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="UserManagement" asp-action="Index">User Management</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SignOut">Sign Out</a>
            </li>
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2020 - XPTO</p>
        </footer>
    </div>

    @await Html.PartialAsync("_FooterReferences")

    @RenderSection("scripts", required: false)
</body>
</html>