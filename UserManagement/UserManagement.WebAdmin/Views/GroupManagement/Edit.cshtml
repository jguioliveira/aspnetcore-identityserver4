
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BasicAuthentication.ViewModel.GroupManagement.NewGroup
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <h3>Edit Group</h3>
    <form method="post">
        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(m => m.Name, new { Class = "form-control" })
        </div>
        <div class="form-group">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Modules</th>
                        <th scope="col" colspan="4">Permissions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.PermissionModules.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(m => m.PermissionModules[i].ModuleId)
                                @Model.PermissionModules[i].ModuleName
                            </td>
                            <td>
                                <div class="btn-group-toggle" data-toggle="buttons">
                                    <label class="btn btn-outline-secondary active">
                                        @Html.CheckBoxFor(m => m.PermissionModules[i].Select) Select
                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group-toggle" data-toggle="buttons">
                                    <label class="btn btn-outline-secondary active">
                                        @Html.CheckBoxFor(m => m.PermissionModules[i].Insert) Insert
                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group-toggle" data-toggle="buttons">
                                    <label class="btn btn-outline-secondary active">
                                        @Html.CheckBoxFor(m => m.PermissionModules[i].Delete) Delete
                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group-toggle" data-toggle="buttons">
                                    <label class="btn btn-outline-secondary active">
                                        @Html.CheckBoxFor(m => m.PermissionModules[i].Update) Update
                                    </label>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

